<%- include('../components/header'); -%>
<%- include('../components/navigation',{page:'data'}); -%>
<div class="container-fluid">
    <div class="row justify-content-center">
        <% for( let index = 0; index < data.length; index++ ) { %>
            <%- include ('../components/card',{card:data[index]}) -%> 
        <% } %>
    </div>
    <% if (modify) { %>
        <div class="col-6 col-sm-6 col-md-4 col-lg-3 col-xl-2 mx-auto">
            <form action="/create">
            <input type="hidden" name="id" value="<%= modify %>"/>
            <input type="submit" value="Modify" class="btn btn-primary mx-auto"/>
            <input type="submit" value="Delete" disabled class="btn btn-primary mx-auto float-right"/>
            </form>
        </div> 
        </div>
    <% } %>
</div>
<%- include('../components/footer'); -%>